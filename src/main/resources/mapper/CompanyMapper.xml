<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.CompanyMapper">

    <resultMap id="companyRM" type="Company">
        <id column="id" property="id"/>
        <result column="company_name" property="companyname"/>
        <result column="address" property="address"/>
        <result column="telephone" property="telephone"/>
    </resultMap>


    <select id="findAll" resultMap="companyRM">
    SELECT * FROM company
</select>

    <insert id="insertCompany" >
        INSERT INTO company(company_name,address,telephone)
        VALUES(#{companyname},#{address},#{telephone})
    </insert>


</mapper>